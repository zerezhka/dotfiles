#!/bin/bash
# Fast xdg-open replacement for i3
# Directly opens URLs in chromium without D-Bus overhead

url="$1"

# Handle different URL formats
case "$url" in
    http://*|https://*|www.*)
        exec chromium "$url" &
        ;;
    *)
        # For non-URLs, fall back to gio but with timeout
        timeout 2 gio open "$@" 2>/dev/null || exec chromium "$url" &
        ;;
esac

