#!/bin/bash
# Restart Telegram with proper environment for fast link opening

# Kill existing Telegram
pkill Telegram

# Wait a moment
sleep 1

# Start Telegram with proper environment
export BROWSER=chromium
export PATH="$HOME/.local/bin:$PATH"
export XDG_CURRENT_DESKTOP=i3
export DESKTOP_SESSION=i3

# Start Telegram in background
Telegram &
