# Swaylock-effects configuration
# Modern locker with blur, clock, and visual effects

# Display
ignore-empty-password
show-failed-attempts
daemonize

# Image and colors
image=/usr/share/backgrounds/xfce/red_moon_penger.jpg
scaling=fill

# Clock
clock
timestr=%H:%M
datestr=%A, %B %d

# Font
font=Iosevka

# Background color
color=073642

# Indicator
indicator-radius=120
indicator-thickness=10

# Ring colors - Default state
ring-color=268bd2
key-hl-color=859900
text-color=fdf6e3
inside-color=073642aa

# Verifying state
ring-ver-color=2aa198
text-ver-color=fdf6e3
inside-ver-color=073642aa

# Wrong password state
ring-wrong-color=dc322f
text-wrong-color=fdf6e3
inside-wrong-color=073642aa

# Clear state
ring-clear-color=b58900
text-clear-color=fdf6e3
inside-clear-color=073642aa

# Separator
separator-color=00000000

# Layout text
layout-text-color=93a1a1
layout-bg-color=00000000

# Caps Lock
caps-lock-key-hl-color=cb4b16
caps-lock-bs-hl-color=dc322f

# Line settings
line-uses-inside

# Effects - Modern and beautiful
fade-in=0.3
effect-blur=10x6
effect-vignette=0.2:0.8
effect-pixelate=5
grace=2
grace-no-mouse
grace-no-touch
