# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/show_notification.sh volume +5%
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/show_notification.sh volume -5%
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/scripts/show_notification.sh volume --toggle
